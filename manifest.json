{
    "manifest_version": 2,

    "name": "bounty blur",
    "description": "Author: @n",
    "version": "0.2",

    "icons": {
      "48": "icon.png"
    },

    "content_scripts": [
      {
        "matches": ["https://*.bugcrowd.com/*","https://*.hackerone.com/*"],
        "js": ["blurify.js"],
        "css": ["css/bugcrowd.css"]
      }
    ],

    "permissions": [
      "tabs", "<all_urls>"
    ],

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
}